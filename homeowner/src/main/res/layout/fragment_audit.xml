<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".fragments.AuditFragment">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/colorPrimary"
        android:elevation="4dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="18dp"
            android:paddingTop="36dp"
            android:paddingEnd="18dp"
            android:text="You have no\naudits scheduled."
            android:textColor="@color/white"
            android:textSize="36sp" />

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvAvailabilities"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/tvAddAvailability"
            style="@style/button.blue"
            android:layout_below="@+id/rvAvailabilities"
            android:layout_width="wrap_content"
            android:text="Add availability"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnContinue"
            style="@style/button.green"
            android:layout_width="wrap_content"
            android:layout_alignParentEnd="true"
            android:textAllCaps="false"
            android:text="Continue"
            android:layout_marginEnd="16dp"
            android:layout_below="@+id/tvAddAvailability"
            android:layout_marginTop="8dp"
            android:layout_height="wrap_content" />

        <View
            android:id="@+id/disabled"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#A6373737"
            android:clickable="true"
            android:elevation="2dp"
            android:focusable="true" />
    </RelativeLayout>


</LinearLayout>